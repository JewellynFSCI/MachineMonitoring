@{
	Layout = null;
}
@model MachineMonitoring.Models.ViewModel.AdminVM

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Machine Monitoring | Change Password</title>

	<link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
	<link href="~/dist/css/adminlte.min.css" rel="stylesheet" />
	<link href="~/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />

	<style>
		.rule {
			font-size: 12px;
			color: dimgray;
			margin-bottom: 0rem;
		}

		input::placeholder {
			font-weight: bold;
		}
	</style>

</head>
<body class="hold-transition login-page">
	<div class="login-box">
		<div class="card card-outline">
			<div class="card-header text-center">
				<img src="~/img/icon3.png" alt="MachineLocation" height="100" width="100">
				<h2>Machine Monitoring</h2>
			</div>
			<div class="card-body">
				<p class="login-box-msg">Change your password</p>

				<form id="ChangePasswordForm" method="post">
					<div class="input-group mb-3">
						<input type="password" class="form-control" id="NewPassword" name="NewPassword" placeholder="Type your new password . . . ">
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="fas fa-lock"></span>
							</div>
						</div>
					</div>

					<div class="input-group mb-3">
						<input type="password" class="form-control" id="CPassword" name="CPassword" placeholder="Re-type your new password . . .">
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="fas fa-lock"></span>
							</div>
						</div>
					</div>

					<div class="form-group" hidden >
						<i id="IconNewPass" class="fa fa-times fa-2x" style="padding-left:5px;"></i>
						<i id="IconConfirmPass" class="fa fa-times fa-2x" style="padding-left:5px;"></i>
					</div>

					<div class="form-group">
						<p class="rule"><i class="fa fa-times" id="Upper"></i> 1 Upper case</p>
						<p class="rule"><i class="fa fa-times" id="Lower"></i> 1 Lower case</p>
						<p class="rule"><i class="fa fa-times" id="Special"></i> 1 Special character</p>
						<p class="rule"><i class="fa fa-times" id="Num"></i> Must have number/s</p>
						<p class="rule"><i class="fa fa-times" id="Length"></i> Length must be 8 - 12 characters</p>
					</div>

					<div class="row">
						<div class="w-100 mb-2">
							<button type="button" class="btn btn-primary btn-block" onclick="CheckInputs()">Change Password <i class="fas fa-user-shield"></i></button>
						</div>
					</div>
				</form>

				<div class="text-center">
					<p class="mb-0">
						<a asp-controller="Home" asp-action="Logout" class="text-center">Login</a>
					</p>
				</div>
			</div>
		</div>
	</div>



	<script src="~/plugins/jquery/jquery.min.js"></script>
	<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/dist/js/adminlte.js"></script>
	<script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
	<script src="~/js/ChangePassword.js"></script>
</body>
</html>
